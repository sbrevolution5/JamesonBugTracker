@model JamesonBugTracker.Models.ViewModels.MyTicketsViewModel
@{
    ViewData["Title"] = "MyTickets";
}

<div class="container-fluid">
    <p>
        <a asp-action="Create">Create New Ticket</a>
    </p>
    <h1> My Development Tickets</h1>
    <div class="card p-2">
        <table id="ticketTable" class="table dataTable striped">
            <thead>
                <tr>

                    <th>Name</th>
                    <th>Created</th>
                    <th>Developer</th>
                    <th>Submitter</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Priority</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.DevTickets)
                {
                    <tr>
                        <td>@ticket.Title</td>
                        <td>@ticket.Created</td>
                        <td>@ticket.DeveloperUser?.FullName</td>
                        <td>@ticket.OwnerUser?.FullName</td>
                        <td>@ticket.Description</td>
                        <td>@ticket.TicketType.Name</td>
                        <td>@ticket.TicketPriority.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@ticket.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@ticket.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <h1> My Submitted Tickets</h1>
    <div class="card p-2">
        <table id="submittedTable" class="table dataTable striped">
            <thead>
                <tr>

                    <th>Name</th>
                    <th>Created</th>
                    <th>Developer</th>
                    <th>Submitter</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Priority</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.SubmittedTickets)
                {
                    <tr>
                        <td>@ticket.Title</td>
                        <td>@ticket.Created</td>
                        <td>@ticket.DeveloperUser?.FullName</td>
                        <td>@ticket.OwnerUser?.FullName</td>
                        <td>@ticket.Description</td>
                        <td>@ticket.TicketType.Name</td>
                        <td>@ticket.TicketPriority.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@ticket.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@ticket.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#ticketTable').DataTable();
            $('#submittedTable').DataTable();
        });</script>
}
