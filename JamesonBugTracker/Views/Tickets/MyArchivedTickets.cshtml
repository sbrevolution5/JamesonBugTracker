@{
}
<h1> My Archived Development Tickets</h1>
<div class="card p-2">
    <table id="ticketTable" class="table dataTable table-striped">
        <thead>
            <tr>

                <th>Name</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Submitter</th>
                <th>Description</th>
                <th>Status</th>
                <th>Type</th>
                <th>Priority</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.DevTicketsArchived)
            {
                <tr>
                    <td>@ticket.Title</td>
                    <td>@string.Format("{0:MMM dd yyyy}", ticket.Created)</td>
                    <td>@string.Format("{0:MMM dd yyyy}", ticket.Updated)</td>
                    <td>@ticket.OwnerUser?.FullName</td>
                    <td>@ticket.Description</td>
                    <td>@ticket.TicketStatus.Name</td>
                    <td>@ticket.TicketType.Name</td>
                    <td><span class="badge priorityBadge">@ticket.TicketPriority.Name</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@ticket.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@ticket.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<h1> My Archived Submitted Tickets</h1>
<div class="card p-2">
    <table id="submittedTable" class="table dataTable table-striped">
        <thead>
            <tr>

                <th>Name</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Submitter</th>
                <th>Description</th>
                <th>Status</th>
                <th>Type</th>
                <th>Priority</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.SubTicketsArchived)
            {
                <tr>
                    <td>@ticket.Title</td>
                    <td>@string.Format("{0:MMM dd yyyy}", ticket.Created)</td>
                    <td>@string.Format("{0:MMM dd yyyy}", ticket.Updated)</td>
                    <td>@ticket.OwnerUser?.FullName</td>
                    <td>@ticket.Description</td>
                    <td>@ticket.TicketStatus.Name</td>
                    <td>@ticket.TicketType.Name</td>
                    <td><span class="badge priorityBadge">@ticket.TicketPriority.Name</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@ticket.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@ticket.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/js/PriorityBadge.js"></script>
    <script>
        $(document).ready(function () {
            $('#ticketTable').DataTable();
            $('#submittedTable').DataTable();
        });</script>
}
