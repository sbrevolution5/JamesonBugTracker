@model IEnumerable<JamesonBugTracker.Models.Ticket>

@{
    ViewData["Title"] = "AllTickets";
}

<h1>AllTickets</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="m-3">

<div class="card p-1 m-1">

<table id="ticketTable" class="table dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeveloperUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Description)
                </td>
                <td>
                    @item.TicketPriority.Name
                </td>
                <td>
                    @item.TicketStatus.Name
                </td>
                <td>
                    @item.TicketType.Name
                </td>
                <td>
                    @item.OwnerUser?.FullName
                </td>
                <td>
                    @item.DeveloperUser?.FullName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
    
@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#ticketTable').DataTable();
    });</script>
}