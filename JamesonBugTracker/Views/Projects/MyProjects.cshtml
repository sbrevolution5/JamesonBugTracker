
@model IEnumerable<JamesonBugTracker.Models.Project>

@{
    ViewData["Title"] = "My Projects";
}
@section Header{
    <link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />

}
@using JamesonBugTracker.Services.Interfaces
@inject IBTFileService _fileService

<h1>My Projects</h1>
@if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
{

    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
}
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Projects</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table id="projectTable" class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 20%">
                            Project Name
                        </th>
                        <th style="width: 10%">
                            Team Members
                        </th>
                        <th style="width: 20%">
                            Project Progress
                        </th>
                        <th style="width: 8%" class="text-center">
                            Status
                        </th>
                        <th style="width: 25%">
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var project in Model)
                    {

                        <tr>
                            <td>
                                <a>
                                    @project.Name
                                </a>
                                <br />
                                <small>
                                    @string.Format("{0:MMM dd yyyy}", project.StartDate)
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    @foreach (var member in project.Members)
                                    {

                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@_fileService.ConvertByteArrayToFile(member.AvatarFileData, member.AvatarFileContentType)" data-container="body" data-toggle="popover" data-placement="top" data-trigger="hover" data-content="@member.FullName">
                                        </li>
                                    }
                                </ul>
                            </td>
                            <td class="project_progress">
                                <div class="progress progress-sm">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="@DateTime.Now" aria-valuemin="@project.StartDate" aria-valuemax="@project.EndDate" style="width: 50%" id="progress-@project.Id">
                                    </div>
                                </div>
                                <small id="progress-percent-@project.Id">
                                    57% Complete
                                </small>

                            </td>
                            <td class="project-state">
                                <span id="ticketPriorityText" class="badge priorityBadge">@project.ProjectPriority.Name</span>
                            </td>
                            <td class="project-actions text-right">
                                <a asp-action="Edit" asp-route-id="@project.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>Edit
                                </a> |
                                <a asp-action="Details" asp-route-id="@project.Id">
                                    <i class="fas fa-folder">
                                    </i>Details
                                </a> |
                                <a asp-action="Delete" asp-route-id="@project.Id">
                                    <i class="fas fa-trash">
                                    </i>Delete
                                </a> |
                                <a asp-action="AddMembers" asp-route-id="@project.Id">
                                    <i class="fas fa-user">
                                    </i>Assign Users
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

@section Scripts{
    <script src="~/js/PriorityBadge.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/js/MyProjects.js"></script>
    <script>
        var endDate
        var startDate
        var interval
        var now
        var width
        var barElement
    </script>
    @foreach (var project in Model)
    {
        <script>
        //TODO Get date from c#

        endDate = @project.EndDate.ToUnixTimeSeconds();
        startDate = @project.StartDate.ToUnixTimeSeconds();
        interval = endDate - startDate
        now = @DateTimeOffset.Now.ToUnixTimeSeconds();
        now -= startDate
        width = Math.round(now / interval * 100);

        barElement = document.getElementById("progress-@project.Id")
        barElement.style.width = `${width}%`
        if (width >= 100) {
            barElement.classList.toggle("bg-success")
        }else if (width > 85) {
          barElement.classList.toggle("bg-danger")
          barElement.classList.toggle("progress-bar-striped")
      } else if (width >50 && width <=85) {
          barElement.classList.toggle("bg-warning")
          barElement.classList.toggle("progress-bar-striped")
      } else {
          barElement.classList.toggle("bg-primary")
          barElement.classList.toggle("progress-bar-striped")
      }
      if (width <= 100) {

          document.getElementById("progress-percent-@project.Id").innerText = `${width}%`
      } else {
          document.getElementById("progress-percent-@project.Id").innerText = `Project End Date was @string.Format("{0:MMM dd yyyy}", project.StartDate)`

    }
        </script>
    }


    <script>
        $(document).ready(function () {
            $('#projectTable').DataTable();
        });
    </script>
}