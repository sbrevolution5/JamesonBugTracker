@model JamesonBugTracker.Models.ViewModels.ProjectMembersViewModel

@{
    ViewData["Title"] = "AddMembers";
}
@section Header{
    <link rel="stylesheet" type="text/css" href="~/plugins//bootstrap4-duallistbox/bootstrap-duallistbox.min.css">

}
<div class="container">
    <h2> Assign Users </h2>

    <div class="row">
        <div class="col">
            <div class="panel panel-green margin-bottom-40">
                <div class="panel-heading">
                    <h3 class="panel-title"> @Model.Project.Name</h3>
                </div>
            </div>
            <p>
                Name :
                <span>@Model.Project.Name</span>
            </p>

            <form asp-action="AddMembers" asp-controller="Projects" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Project.Id">
                <input type="hidden" asp-for="@Model.Project.Name">
                <input type="hidden" asp-for="@Model.Project.Description">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="@Model.Users" class="control-label">Assign team members for Project: @Model.Project.Name</label>
                        <select asp-for="@Model.SelectedUsers" asp-items="@Model.Users" class="duallistbox" multiple="multiple"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="btn btn-success" value="Assign Users" />
                        <a asp-action="AllProjects" class="btn btn-secondary">
                            Back to All Projects
                        </a>
                        <a asp-action="MyProjects" class="btn btn-secondary">
                            Back to My Projects
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Project.Id" class="btn btn-secondary">
                            Back to Project Details
                        </a>
                    </div>
                </div>
            </form>


        </div>
        <!--End Hover Rows-->
    </div>
</div>
@section Scripts{
    <script src="~/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <script>


            $(".duallistbox").bootstrapDualListbox()
</script>
}