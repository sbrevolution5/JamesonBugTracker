@model JamesonBugTracker.Models.Project
@using JamesonBugTracker.Services.Interfaces
@inject IBTProjectService _projectService
@{
    ViewData["Title"] = "Details";
    var projectManager = await _projectService.GetProjectManagerAsync(Model.Id);
}
@section Header{
    <link href="~/plugins/chart.js/Chart.css" rel="stylesheet" />
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle"
                             src="../../dist/img/user4-128x128.jpg"
                             alt="User profile picture">
                    </div>

                    <h3 class="profile-username text-center">@Model.Name</h3>

                    <p class="text-muted text-center">Software Engineer</p>

                    <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                            <b>Start Date</b> <a class="float-right">@string.Format("{0:MMM dd yyyy}", Model.StartDate)</a>
                        </li>
                        <li class="list-group-item">
                            <b>EndDate</b> <a class="float-right">@string.Format("{0:MMM dd yyyy}", Model.EndDate)</a>
                        </li>
                        <li class="list-group-item">
                            <b>Priority</b> <a class="float-right">@Model.ProjectPriority.Name</a>
                        </li>
                    </ul>

                    <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- About Me Box -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Members</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <strong>Project Manager: @projectManager?.FullName</strong>
                    <hr />
                    @foreach (var member in Model.Members)
                    {
                        <strong><i class="fas fa-book mr-1"></i> @member.FullName</strong>

                        <p class="text-muted">
                            Number of tickets assigned, number of tickets submitted
                        </p>

                        <hr>
                    }

                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <!--Row of charts-->
            <div class="row">
                <div class="col-md-4">

                    <!-- DONUT CHART -->
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Ticket Types (NO DATA)</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="typeChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- DONUT CHART -->
                <div class="col-md-4">

                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Ticket Status (NO DATA)</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="statusChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- DONUT CHART -->
                <div class="col-md-4">

                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Ticket Priority (NO DATA)</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="priorityChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!--Ticket Table-->
            <div class="card">
                <div class="card-header p-2">
                    <h4>Tickets</h4>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <table id="ticketTable" class="table dataTable">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Created
                                </th>
                                <th>
                                    Priority
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    Submitter
                                </th>
                                <th>
                                    Developer
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tickets)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @item.TicketPriority.Name
                                    </td>
                                    <td>
                                        @item.TicketStatus.Name
                                    </td>
                                    <td>
                                        @item.TicketType.Name
                                    </td>
                                    <td>
                                        @item.OwnerUser?.FullName
                                    </td>
                                    <td>
                                        @item.DeveloperUser?.FullName
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    <script src="~/plugins/chart.js/Chart.bundle.js"></script>

    <script>
        $(document).ready(function () {
            $('#ticketTable').DataTable();
        });
    </script>

    <script src="~/js/ProjectDetails.js"></script>
}