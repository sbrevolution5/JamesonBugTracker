@model IEnumerable<JamesonBugTracker.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Notifications</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Ticket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            
            <td>
                <a asp-action="Details" asp-controller="Tickets" asp-route-id="@item.TicketId">

                    @Html.DisplayFor(modelItem => item.Ticket.Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.FullName)
            </td>
        </tr>
}
    </tbody>
</table>
